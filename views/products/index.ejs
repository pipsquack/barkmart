<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <%- include('../partials/datadog-rum') %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    .product-card { transition: transform 0.2s; height: 100%; }
    .product-card:hover { transform: translateY(-5px); }
  </style>
</head>
<body>
  <%- include('../partials/navbar') %>

  <div class="container my-5">
    <h1 class="mb-4"><%= title %></h1>

    <!-- Filters and Search -->
    <div class="row mb-4">
      <div class="col-md-8">
        <form action="/products" method="GET" class="d-flex">
          <input type="text" class="form-control me-2" name="search" placeholder="Search products..." value="<%= currentSearch %>">
          <button type="submit" class="btn btn-primary">Search</button>
        </form>
      </div>
      <div class="col-md-4">
        <form action="/products" method="GET">
          <select class="form-select" name="sort" onchange="this.form.submit()">
            <option value="newest" <%= currentSort === 'newest' ? 'selected' : '' %>>Newest</option>
            <option value="price-low" <%= currentSort === 'price-low' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="price-high" <%= currentSort === 'price-high' ? 'selected' : '' %>>Price: High to Low</option>
            <option value="name" <%= currentSort === 'name' ? 'selected' : '' %>>Name</option>
          </select>
        </form>
      </div>
    </div>

    <div class="row">
      <!-- Categories Sidebar -->
      <div class="col-md-3">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Categories</h5>
          </div>
          <div class="list-group list-group-flush">
            <a href="/products" class="list-group-item <%= !currentCategory ? 'active' : '' %>">All Products</a>
            <% categories.forEach(category => { %>
              <a href="/products?category=<%= category.slug %>" class="list-group-item <%= currentCategory === category.slug ? 'active' : '' %>">
                <%= category.name %>
              </a>
            <% }) %>
          </div>
        </div>
      </div>

      <!-- Products Grid -->
      <div class="col-md-9">
        <% if (products.length === 0) { %>
          <div class="text-center py-5">
            <p class="lead text-muted">No products found.</p>
          </div>
        <% } else { %>
          <div class="row">
            <% products.forEach(product => { %>
              <div class="col-md-4 mb-4">
                <div class="card product-card">
                  <% if (product.image_url) { %>
                    <img src="<%= product.image_url %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                  <% } else { %>
                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
                      <i class="bi bi-image" style="font-size: 3rem;"></i>
                    </div>
                  <% } %>
                  <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text text-muted"><%= product.category.name %></p>
                    <p class="card-text">
                      <% if (product.stock_quantity > 0) { %>
                        <small class="text-success"><i class="bi bi-check-circle"></i> In Stock</small>
                      <% } else { %>
                        <small class="text-danger"><i class="bi bi-x-circle"></i> Out of Stock</small>
                      <% } %>
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                      <h4 class="text-primary mb-0"><%= formatPrice(product.price) %></h4>
                      <a href="/products/<%= product.slug %>" class="btn btn-sm btn-outline-primary">View</a>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>

          <!-- Pagination -->
          <% if (pagination.totalPages > 1) { %>
            <nav>
              <ul class="pagination justify-content-center">
                <li class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>&category=<%= currentCategory || '' %>&search=<%= currentSearch %>&sort=<%= currentSort %>">Previous</a>
                </li>
                <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                  <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                    <a class="page-link" href="?page=<%= i %>&category=<%= currentCategory || '' %>&search=<%= currentSearch %>&sort=<%= currentSort %>"><%= i %></a>
                  </li>
                <% } %>
                <li class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
                  <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>&category=<%= currentCategory || '' %>&search=<%= currentSearch %>&sort=<%= currentSort %>">Next</a>
                </li>
              </ul>
            </nav>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>

  <%- include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
