<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - BarkMart Admin</title>

  <% var isAdminPanel = true; %>
  <%- include('../partials/datadog-rum') %>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
  <style>
    body { display: flex; min-height: 100vh; }
    .sidebar { width: 250px; background-color: #212529; color: white; }
    .sidebar a { color: #adb5bd; text-decoration: none; padding: 10px 20px; display: block; }
    .sidebar a:hover, .sidebar a.active { background-color: #343a40; color: white; }
    .content { flex: 1; padding: 20px; background-color: #f8f9fa; }
    .navbar-brand { font-weight: bold; color: #ff6b35 !important; }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="p-3">
      <h4><i class="bi bi-shop"></i> BarkMart</h4>
      <small class="text-muted">Admin Panel</small>
    </div>
    <nav>
      <a href="/admin/dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a>
      <a href="/admin/products"><i class="bi bi-box-seam"></i> Products</a>
      <a href="/admin/orders"><i class="bi bi-cart-check"></i> Orders</a>
      <a href="/admin/users"><i class="bi bi-people"></i> Users</a>
      <a href="/"><i class="bi bi-house"></i> Back to Store</a>
    </nav>
  </div>

  <div class="content">
    <% if (success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <% if (error) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <%- body %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
