<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>

  <%- include('../../partials/datadog-rum') %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>
  <div class="d-flex">
    <%- include('../sidebar') %>

    <div class="flex-grow-1 p-4" style="background-color: #f8f9fa; min-height: 100vh;">
      <h1 class="mb-4"><%= title %></h1>

      <!-- Search -->
      <div class="card mb-4">
        <div class="card-body">
          <form action="/admin/users" method="GET" class="d-flex">
            <input type="text" class="form-control me-2" name="search" placeholder="Search users..." value="<%= currentSearch %>">
            <button type="submit" class="btn btn-primary">Search</button>
          </form>
        </div>
      </div>

      <!-- Users Table -->
      <div class="card">
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Phone</th>
                  <th>Role</th>
                  <th>Registered</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user => { %>
                  <tr>
                    <td><strong><%= user.first_name %> <%= user.last_name %></strong></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone || 'N/A' %></td>
                    <td>
                      <% if (user.is_admin) { %>
                        <span class="badge bg-danger">Admin</span>
                      <% } else { %>
                        <span class="badge bg-secondary">Customer</span>
                      <% } %>
                    </td>
                    <td><%= formatDate(user.created_at) %></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Pagination -->
      <% if (pagination.totalPages > 1) { %>
        <nav class="mt-4">
          <ul class="pagination justify-content-center">
            <li class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= pagination.currentPage - 1 %>&search=<%= currentSearch %>">Previous</a>
            </li>
            <% for (let i = 1; i <= pagination.totalPages; i++) { %>
              <li class="page-item <%= i === pagination.currentPage ? 'active' : '' %>">
                <a class="page-link" href="?page=<%= i %>&search=<%= currentSearch %>"><%= i %></a>
              </li>
            <% } %>
            <li class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
              <a class="page-link" href="?page=<%= pagination.currentPage + 1 %>&search=<%= currentSearch %>">Next</a>
            </li>
          </ul>
        </nav>
      <% } %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
