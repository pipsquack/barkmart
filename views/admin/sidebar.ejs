<div class="bg-dark text-white" style="width: 250px; min-height: 100vh;">
  <div class="p-3">
    <h4><i class="bi bi-shop"></i> BarkMart</h4>
    <small class="text-muted">Admin Panel</small>
  </div>
  <nav>
    <a href="/admin/dashboard" class="d-block text-white-50 text-decoration-none p-3 <%= title.includes('Dashboard') ? 'bg-secondary' : '' %>">
      <i class="bi bi-speedometer2"></i> Dashboard
    </a>
    <a href="/admin/products" class="d-block text-white-50 text-decoration-none p-3 <%= title.includes('Product') ? 'bg-secondary' : '' %>">
      <i class="bi bi-box-seam"></i> Products
    </a>
    <a href="/admin/orders" class="d-block text-white-50 text-decoration-none p-3 <%= title.includes('Order') && !title.includes('Dashboard') ? 'bg-secondary' : '' %>">
      <i class="bi bi-cart-check"></i> Orders
    </a>
    <a href="/admin/users" class="d-block text-white-50 text-decoration-none p-3 <%= title.includes('User') ? 'bg-secondary' : '' %>">
      <i class="bi bi-people"></i> Users
    </a>
    <hr class="text-white-50">
    <a href="/" class="d-block text-white-50 text-decoration-none p-3">
      <i class="bi bi-house"></i> Back to Store
    </a>
  </nav>
</div>
