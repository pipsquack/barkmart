NODE_ENV=development
PORT=3000

# PostgreSQL Configuration (DATABASE_URL is automatically constructed from these)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=barkmart
POSTGRES_USER=barkmart
POSTGRES_PASSWORD=your-secure-postgres-password-here

# Session Secret (MUST change in production!)
SESSION_SECRET=generate-secure-random-string-change-in-production

# Datadog RUM (Real User Monitoring)
DD_RUM_ENABLED=false
DD_RUM_CLIENT_TOKEN=your-datadog-rum-client-token
DD_RUM_APPLICATION_ID=your-datadog-rum-application-id
DD_RUM_SITE=datadoghq.com
DD_RUM_SERVICE=barkmart
DD_RUM_SESSION_SAMPLE_RATE=100
DD_RUM_SESSION_REPLAY_SAMPLE_RATE=20
DD_ENV=development

# Application Version (for tracking in Datadog RUM)
APP_VERSION=1.0.0
